FROM dmsbase
ARG PIDKEY
ARG MOBILITY_PIDKEY
ARG SDK_LICENSE_PIDKEY
ARG APACHE_SERVER_NAME
ARG SSLCERT
ARG SSLKEY
ARG CLUSTERING_PIDKEY
RUN mkdir C:\dmsshare
RUN c:\windows\system32\msiexec.exe /qn /i imanage.msi PIDKEY=%PIDKEY% MOBILITY_PIDKEY=%MOBILITY_PIDKEY% SDK_LICENSE_PIDKEY=%SDK_LICENSE_PIDKEY% APACHE_SERVER_NAME=%APACHE_SERVER_NAME% SSLCERT=%SSLCERT% SSLKEY=%SSLKEY%
RUN c:\windows\system32\msiexec.exe /qn /i clustering.msi SERIALNUMBER=%CLUSTERING_PIDKEY%
VOLUME c:\\dmsshare
ADD startdms.ps1 . 
CMD powershell ./startdms
